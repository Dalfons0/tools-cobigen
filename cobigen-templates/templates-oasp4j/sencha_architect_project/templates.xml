<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<templatesConfiguration xmlns="http://capgemini.com/devonfw/cobigen/TemplatesConfiguration"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1">

  <templates>
    <templateExtension ref="${variables.etoName#cap_first}Controller.js" mergeStrategy="sencharchmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}.js" mergeStrategy="sencharchmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}s.js" mergeStrategy="sencharchmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}sViewController.js"/>
    <templateExtension ref="${variables.etoName#cap_first}sViewModel.js"/>
    <templateExtension ref="Application.js"/>
    <templateExtension ref="${variables.domain}.xds" mergeStrategy="sencharchmerge"/>
  </templates>

  <templateScans>
    <templateScan name="all" templatePath="templates" destinationPath=""/>
  </templateScans>

  <increments>
    <increment name="architect" description="Sencha Architect Project">
      <templateScanRef ref="all" />
    </increment>
  </increments>
</templatesConfiguration>
