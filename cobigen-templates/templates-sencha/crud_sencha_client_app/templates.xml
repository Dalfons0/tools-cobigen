<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<templatesConfiguration xmlns="http://capgemini.com/devonfw/cobigen/TemplatesConfiguration"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1">

  <templates>
    <templateExtension ref="${variables.etoName#cap_first}Controller.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}M.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}ListVM.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}ListVC.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}ListV.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}EditVM.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}EditVC.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}EditV.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}_es_ES.js" mergeStrategy="jsmerge"/>
    <templateExtension ref="${variables.etoName#cap_first}_en_EN.js" mergeStrategy="jsmerge"/>
  </templates>

  <templateScans>
    <templateScan templatePath="templates" destinationPath="sencha_client"/>
  </templateScans>

  <increments>
    <increment name="model" description="Model">
      <templateRef ref="${variables.etoName#cap_first}M.js"/>
    </increment>
    <increment name="controller" description="Controller">
      <templateRef ref="${variables.etoName#cap_first}Controller.js"/>
    </increment>
    <increment name="views" description="Views">
      <templateRef ref="${variables.etoName#cap_first}ListVM.js"/>
      <templateRef ref="${variables.etoName#cap_first}ListVC.js"/>
      <templateRef ref="${variables.etoName#cap_first}ListV.js"/>
      <templateRef ref="${variables.etoName#cap_first}EditVM.js"/>
      <templateRef ref="${variables.etoName#cap_first}EditVC.js"/>
      <templateRef ref="${variables.etoName#cap_first}EditV.js"/>
    </increment> 
    <increment name="i18n" description="i18n">
      <templateRef ref="${variables.etoName#cap_first}_es_ES.js"/>
      <templateRef ref="${variables.etoName#cap_first}_en_EN.js"/>
    </increment>
  </increments>
</templatesConfiguration>
