      templateFile="javascript/app/oasp/oasp-i18n/js/oasp-i18n.module.js.ftl"/>
      <template id="app_oasp_oasp-i18n_js_oasp-i18n.module.spec" destinationPath="javascript/app/oasp/oasp-i18n/js/oasp-i18n.module.spec.js"
      templateFile="javascript/app/oasp/oasp-i18n/js/oasp-i18n.module.spec.js.ftl"/>
      <template id="app_oasp_oasp-i18n_js_oasp-translation.provider" destinationPath="javascript/app/oasp/oasp-i18n/js/oasp-translation.provider.js"
      templateFile="javascript/app/oasp/oasp-i18n/js/oasp-translation.provider.js.ftl"/>
      <template id="app_oasp_oasp-i18n_js_oasp-translation.provider.spec" destinationPath="javascript/app/oasp/oasp-i18n/js/oasp-translation.provider.spec.js"
      templateFile="javascript/app/oasp/oasp-i18n/js/oasp-translation.provider.spec.js.ftl"/>
      <template id="app_oasp_oasp-i18n_js_template-load-translation-interceptor.service" destinationPath="javascript/app/oasp/oasp-i18n/js/template-load-translation-interceptor.service.js"
      templateFile="javascript/app/oasp/oasp-i18n/js/template-load-translation-interceptor.service.js.ftl"/>
      <template id="app_oasp_oasp-i18n_js_language-change_language-change.controller" destinationPath="javascript/app/oasp/oasp-i18n/js/language-change/language-change.controller.js"
      templateFile="javascript/app/oasp/oasp-i18n/js/language-change/language-change.controller.js.ftl"/>
      <template id="app_oasp_oasp-i18n_js_language-change_language-change.controller.spec" destinationPath="javascript/app/oasp/oasp-i18n/js/language-change/language-change.controller.spec.js"
      templateFile="javascript/app/oasp/oasp-i18n/js/language-change/language-change.controller.spec.js.ftl"/>
      <template id="app_oasp_oasp-i18n_js_language-change_language-change.directive" destinationPath="javascript/app/oasp/oasp-i18n/js/language-change/language-change.directive.js"
      templateFile="javascript/app/oasp/oasp-i18n/js/language-change/language-change.directive.js.ftl"/>
      <template id="app_oasp_oasp-i18n_js_language-change_language-change.directive.spec" destinationPath="javascript/app/oasp/oasp-i18n/js/language-change/language-change.directive.spec.js"
      templateFile="javascript/app/oasp/oasp-i18n/js/language-change/language-change.directive.spec.js.ftl"/> -->

    <!-- COMPONENT -->
    <template id="component_html_entityname" destinationPath="javascript/app/${variables.component}/html/${variables.entityName}.html"
      templateFile="javascript/app/${variables.component}/html/${variables.entityName}.html.ftl"/>
      <template id="component_i18n_locale-de" destinationPath="javascript/app/${variables.component}/i18n/locale-de.json"
      templateFile="javascript/app/${variables.component}/i18n/locale-de.json.ftl"/>
      <template id="component_i18n_locale-en" destinationPath="javascript/app/${variables.component}/i18n/locale-en.json"
      templateFile="javascript/app/${variables.component}/i18n/locale-en.json.ftl"/>
    <template id="component_js_component_module" destinationPath="javascript/app/${variables.component}/js/${variables.component}.module.js"
      templateFile="javascript/app/${variables.component}/js/${variables.component}.module.js.ftl"/>
    <template id="component_js_entityname_controller" destinationPath="javascript/app/${variables.component}/js/${variables.entityName}.controller.js"
      templateFile="javascript/app/${variables.component}/js/${variables.entityName}.controller.js.ftl"/>
    <template id="component_js_entityname_rest_service" destinationPath="javascript/app/${variables.component}/js/${variables.entityName}.rest.service.js"
      templateFile="javascript/app/${variables.component}/js/${variables.entityName}.rest.service.js.ftl"/>
    <template id="component_js_entityname_service" destinationPath="javascript/app/${variables.component}/js/${variables.entityName}.service.js"
      templateFile="javascript/app/${variables.component}/js/${variables.entityName}.service.js.ftl"/>

  </templates>

  <template-scans>
  <!-- TODO, not includent in an increment, see cobigen issue #118 -->
    <template-scan templatePath="javascript/app/oasp-mock" templateIdPrefix="" destinationPath="javascript/app/oasp-mock"/>
    <template-scan templatePath="javascript/gulp" templateIdPrefix="" destinationPath="javascript/gulp"/>
    <template-scan templatePath="javascript/app/oasp" templateIdPrefix="" destinationPath="javascript/app/oasp"/>
    <template-scan templatePath="javascript/app/main/css" templateIdPrefix="" destinationPath="javascript/app/main/css"/>
    <template-scan templatePath="javascript/app/main/html" templateIdPrefix="" destinationPath="javascript/app/main/html"/>
    <template-scan templatePath="javascript/app/main/i18n" templateIdPrefix="" destinationPath="javascript/app/main/i18n"/>
    <template-scan templatePath="javascript/app/main/js" templateIdPrefix="" destinationPath="javascript/app/main/js"/>
  </template-scans>

  <increments>
    <increment id="client_general" description="Client, general files">
      <templateRef idref="general_config"/>
      <templateRef idref="general_bower"/>
      <templateRef idref="general_gulpfile"/>
      <templateRef idref="general_jenkins-build-sonar"/>
      <templateRef idref="general_jenkins-build"/>
      <templateRef idref="general_karma.conf"/>
      <templateRef idref="general_package"/>
      <templateRef idref="general_README"/>
      <templateRef idref="general_bowerrc"/>
    </increment>
    <increment id="client_java" description="Client, java deployment files">
      <templateRef idref="java_pom"/>
      <templateRef idref="java_web"/>
    </increment>
    <increment id="client_app_component" description="Client, app component files">
      <templateRef idref="component_html_entityname"/>
      <templateRef idref="component_i18n_locale-de"/>
      <templateRef idref="component_i18n_locale-en"/>
      <templateRef idref="component_js_component_module"/>
      <templateRef idref="component_js_entityname_controller"/>
      <templateRef idref="component_js_entityname_rest_service"/>
      <templateRef idref="component_js_entityname_service"/>
    </increment>
  </increments>
</templatesConfiguration>
