      <template id="gulp_unit-tests" destinationPath="javascript/gulp/unit-tests.js" templateFile="javascript/gulp/unit-tests.js.ftl"/>
      <template id="gulp_watch" destinationPath="javascript/gulp/watch.js" templateFile="javascript/gulp/watch.js.ftl"/>
      <template id="gulp_wiredep" destinationPath="javascript/gulp/wiredep.js" templateFile="javascript/gulp/wiredep.js.ftl"/>
      <template id="gulp_build-app-template" destinationPath="javascript/gulp/app-template/build-app-template.js"
