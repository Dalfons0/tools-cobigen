<?xml version="1.0" encoding="UTF-8"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd"
  xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>cobigen-javaplugin</artifactId>
  <name>CobiGen - Java Plug-in</name>
  <version>1.6.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <parent>
    <groupId>com.capgemini</groupId>
    <artifactId>cobigen-parent</artifactId>
    <version>dev-SNAPSHOT</version>
  </parent>

  <properties>
    <skip.deployment>false</skip.deployment>
    <bundle.classpath>lib/cobigen-core-4.0.0.jar,
      lib/cobigen-core-api-4.0.0.jar,
      lib/commons-beanutils-1.9.1.jar,
      lib/commons-collections-3.2.1.jar,
      lib/commons-io-2.4.jar,
      lib/commons-jxpath-1.3.jar,
      lib/commons-lang3-3.1.jar,
      lib/dozer-5.5.1.jar,
      lib/guava-17.0.jar,
      lib/javax.inject-1.jar,
      lib/jaxen-1.1.4.jar,
      lib/jcl-over-slf4j-1.7.21.jar,
      lib/log4j-over-slf4j-1.7.21.jar,
      lib/mmm-util-core-7.4.0.jar,
      lib/mmm-util-pojo-7.4.0.jar,
      lib/qdox-2.0-M3.jar</bundle.classpath>
  </properties>

  <dependencies>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>cobigen-core</artifactId>
      <version>4.0.0</version>
    </dependency>
    
    <dependency>
      <groupId>com.capgemini</groupId>
      <artifactId>cobigen-javautil</artifactId>
      <version>1.0.0-SNAPSHOT</version>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>cobigen-core-test</artifactId>
      <version>4.0.0</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>cobigen-tempeng-freemarker</artifactId>
      <version>1.0.0-SNAPSHOT</version>
      <scope>test</scope>
    </dependency>

    <!-- QDox for Java parsing -->
    <dependency>
      <groupId>com.thoughtworks.qdox</groupId>
      <artifactId>qdox</artifactId>
      <version>2.0-M3</version>
    </dependency>

    <!-- for advanced introspection -->
    <dependency>
      <groupId>net.sf.m-m-m</groupId>
      <artifactId>mmm-util-pojo</artifactId>
      <version>7.4.0</version>
    </dependency>
  </dependencies>

</project>
